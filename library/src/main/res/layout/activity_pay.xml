<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#cc000000">


    <com.ccl.perfectisshit.payview.widget.KeyboardView
        android:id="@+id/kbv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/kbv"
        android:background="@android:color/white"
        android:paddingBottom="30dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="30dp">

        <com.ccl.perfectisshit.payview.widget.PayView
            android:id="@+id/pv"

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white"
            android:hint="edittext"
            android:inputType="text"
            app:passwordMode="cipherTextMode"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_switch_mode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="10dp"
        android:text="switch mode"
        android:textColor="@android:color/holo_orange_light"
        android:textSize="13sp"/>

    <TextView
        android:id="@+id/tv_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_switch_mode"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:padding="10dp"
        android:text="toast password"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="13sp"/>


</RelativeLayout>