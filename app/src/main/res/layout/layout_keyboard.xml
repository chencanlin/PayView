<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#E0E0E0"
                android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_keyboard_bg">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/arrow_bottom"/>
    </RelativeLayout>

    <TableLayout
        android:layout_below="@+id/rl_hide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:id="@+id/tv_one"
                style="@style/keyBoardViewChildView"
                android:layout_column="0"
                android:layout_row="0"
                android:text="1"
                />

            <TextView
                android:id="@+id/tv_two"
                style="@style/keyBoardViewChildView"
                android:layout_column="1"
                android:layout_row="0"
                android:text="2"
                />

            <TextView
                android:id="@+id/tv_three"
                style="@style/keyBoardViewChildView"
                android:layout_column="2"
                android:layout_row="0"
                android:text="3"
                />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv_four"
                style="@style/keyBoardViewChildView"
                android:layout_column="0"
                android:layout_row="1"
                android:text="4"

                />

            <TextView
                android:id="@+id/tv_five"
                style="@style/keyBoardViewChildView"
                android:layout_column="1"
                android:layout_row="1"
                android:text="5"
                />

            <TextView
                android:id="@+id/tv_six"
                style="@style/keyBoardViewChildView"
                android:layout_column="2"
                android:layout_row="1"
                android:text="6"
                />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/tv_seven"
                style="@style/keyBoardViewChildView"
                android:layout_column="0"
                android:layout_row="2"
                android:text="7"
                />

            <TextView
                android:id="@+id/tv_eight"
                style="@style/keyBoardViewChildView"
                android:layout_column="1"
                android:layout_row="2"
                android:text="8"
                />

            <TextView
                android:id="@+id/tv_nine"
                style="@style/keyBoardViewChildView"
                android:layout_column="2"
                android:layout_row="2"
                android:text="9"
                />
        </TableRow>

        <TableRow
            android:weightSum="3"
            >

            <TextView
                android:id="@+id/tv_blank"
                style="@style/keyBoardViewChildView"
                android:background="@android:color/transparent"
                />

            <TextView
                android:id="@+id/tv_zero"
                style="@style/keyBoardViewChildView"
                android:text="0"
                />

            <RelativeLayout
                android:id="@+id/rl_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/delete"/>
            </RelativeLayout>
        </TableRow>
    </TableLayout>

</RelativeLayout>